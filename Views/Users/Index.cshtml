@model IEnumerable<BidDecore.Models.User>

@{
    ViewData["Title"] = "Index";
}
<style>
    body {
        background-color: #181818;
        color: #fff;
    }

    .profile-container {
        background-color: #282828;
        padding: 10px;
        border-radius: 5px;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
    }

    .profile-img {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        margin-right: 15px;
    }

    .profile-info h5 {
        margin: 0;
    }

    .profile-info p {
        margin: 0;
        color: #aaa;
    }
    a{
        text-decoration:none;
        color:white;
    }
    .hov1{
        transition: background-color 0.3s ease; /* Плавный переход цвета */
    }
    .hov1:hover{
        background-color: dimgray;
    }
</style>


<h1>All Users</h1>

<p style="text-align:center;margin-top: 41px;">
    <a asp-action="Create" class="btn btn-primary"> Create New </a>
</p>
